<Window x:Class="Laba_21.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba_21"
        mc:Ignorable="d"
        Title="Laba 21 by Istomin" Height="450" Width="800">

    
    <Grid>

        <StackPanel Orientation="Vertical">

            <StackPanel>
                <DataGrid x:Name="FacultyTable" Style="{StaticResource grid_style}" Loaded="OnLoad"/>
                <ToolBar Template="{StaticResource table_toolbar}"/>
            </StackPanel>

            <StackPanel>
                <DataGrid x:Name="GroupTable" Style="{StaticResource grid_style}" Loaded="OnLoad"/>
                <ToolBar Template="{StaticResource table_toolbar}"/>
            </StackPanel>


            <StackPanel>
                <DataGrid x:Name="StudentTable" Style="{StaticResource grid_style}" Loaded="OnLoad"/>
                <ToolBar Template="{StaticResource table_toolbar}"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
