<Window x:Class="Laba_21.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba_21"
        mc:Ignorable="d"
        Title="Laba 21 by Istomin" Height="450" Width="800">

    <Window.Resources>
        <Style x:Key="grid_style" TargetType="DataGrid">
            <Setter Property="Margin" Value="10 20 10 5"/>
            <Setter Property="MaxHeight" Value="150"/>
        </Style>
    </Window.Resources>
    
    <Grid>

        <StackPanel Orientation="Vertical">

            <StackPanel>
                <DataGrid Style="{StaticResource grid_style}" x:Name="faculties" Loaded="OnLoad"/>
            </StackPanel>

            <StackPanel>
                <DataGrid Style="{StaticResource grid_style}" x:Name="groups" Loaded="OnLoad"/>
            </StackPanel>


            <StackPanel>
                <DataGrid Style="{StaticResource grid_style}" x:Name="students" Loaded="OnLoad"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
